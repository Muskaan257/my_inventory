<p id="notice"><%= notice %></p>
<h1>Listing <%= Inventory.find(session[:inventory_id]).name %> items</h1>

<table class="table table-bordered" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= (Inventory.find_by(id: item.inventory_id).primary_user_id == session[:user_id]) || (Inventory.find_by(id: item.inventory_id).edit_flag) ? (link_to 'Edit', edit_item_path(item)) : ' ' %></td>
        <td><%= (Inventory.find_by(id: item.inventory_id).primary_user_id == session[:user_id]) || (Inventory.find_by(id: item.inventory_id).destroy_flag) ? (link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }) : ' ' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: "btn btn-outline-secondary" %>
